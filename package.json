{
  "name": "monopoly-hap",
  "version": "1.0.0",
  "description": "UA monopoly",
  "repository": "https://github.com/molod01/monopoly-hap",
  "author": "molod01 <manuylovnikitos@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npx husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:proto": "prettier --write \"src/**/*.pb.ts\"",
    "proto:generate": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./src/_proto --ts_proto_out=src src/_proto/*/*.proto --ts_proto_opt=nestJs=true --ts_proto_opt=unrecognizedEnum=false --ts_proto_opt=removeEnumPrefix=true --ts_proto_opt=fileSuffix=.pb --ts_proto_opt=addGrpcMetadata=true --ts_proto_opt=useOptionals=all && npm run format:proto",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:up": "docker-compose --env-file .env.development up -d --build",
    "docker:down": "docker-compose --env-file .env.development down",
    "docker:logs": "docker-compose logs -f",
    "typeorm": "env-cmd -f .env.development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:run",
    "migration:revert": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:revert",
    "schema:drop": "npm run typeorm -- --dataSource=src/database/data-source.ts schema:drop",
    "seed:run": "ts-node -r tsconfig-paths/register ./src/database/seeds/run-seed.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.2",
    "@grpc/proto-loader": "^0.7.10",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/elasticsearch": "^10.0.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/platform-fastify": "^9.2.1",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/terminus": "^9.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.11.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "nestjs-pino": "^3.1.2",
    "pg": "^8.8.0",
    "pino": "^8.8.0",
    "pino-http": "^8.3.1",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.11",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^3.18.0",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/jest": "29.2.5",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "env-cmd": "^10.1.0",
    "eslint": "8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.3",
    "jest": "29.3.1",
    "prettier": "^2.8.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "ts-proto": "^1.162.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18"
  }
}
